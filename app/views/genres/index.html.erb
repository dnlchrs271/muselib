<p id="notice"><%= notice %></p>
<div class = listingGenres>
<h1>Listing genres</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.title %></td>
        <td><%= link_to 'Show', genre %></td>
        <td><%= link_to 'Edit', edit_genre_path(genre) %></td>
        <td><%= link_to 'Destroy', genre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Focus', new_genre_path %>
<%= link_to 'Sleep', new_genre_path %>
<%= link_to 'Relaxation', new_genre_path %>
<%= link_to 'Focus/ADHD', new_genre_path %>
<%= link_to 'Depression', new_genre_path %>
</div>